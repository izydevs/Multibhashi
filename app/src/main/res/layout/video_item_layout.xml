<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_background"
        android:layout_marginTop="@dimen/four_dp"
        android:layout_marginStart="@dimen/four_dp"
        android:layout_marginEnd="@dimen/four_dp"
>

    <ImageView
            android:id="@+id/thumb_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/one_ninty_six_dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />


    <ImageView
            android:id="@+id/play_icon"
            android:layout_width="@dimen/sixty_four_dp"
            android:layout_height="@dimen/sixty_four_dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_play_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/sixteen_sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:layout_margin="@dimen/sixteen_dp"
            app:layout_constraintBottom_toBottomOf="@+id/thumb_icon"
            app:layout_constraintStart_toStartOf="@+id/thumb_icon"
    />
</android.support.constraint.ConstraintLayout>
